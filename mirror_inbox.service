[Unit]
Description=Telegram USERBOT inbox writer (Telethon)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=anton
Group=anton
WorkingDirectory=/home/anton/mirror_inbox
ExecStart=/usr/bin/python3 /home/anton/mirror_inbox/userbot_daemon.py
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target